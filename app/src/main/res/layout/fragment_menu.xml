<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brokenpicinc.brokenpic.MenuFragment"
    android:background="@drawable/broken_pic_logo_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/menu_logo"
            android:background="@drawable/broken_pic_logo_bg"
            />

        <LinearLayout

            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="90"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:weightSum="100">

                    <ImageButton
                        android:id="@+id/start_new_game_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:src="@drawable/start_new_game_btn"
                        android:background="@color/colorWhite"/>

                    <ImageButton
                        style="@style/MenuPaddingTopStyle"
                        android:id="@+id/take_your_turn_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:src="@drawable/take_your_turn_btn"
                        android:background="@color/colorWhite"/>

                    <ImageButton
                        style="@style/MenuPaddingTopStyle"
                        android:id="@+id/show_finished_games"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:src="@drawable/show_finished_games"
                        android:background="@color/colorWhite"/>

                    <ImageButton
                        android:visibility="invisible"
                        style="@style/MenuPaddingTopStyle"
                        android:id="@+id/follow_your_opened_games_btn"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:src="@drawable/follow_your_opened_games_btn"
                        android:background="@color/colorWhite"/>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
