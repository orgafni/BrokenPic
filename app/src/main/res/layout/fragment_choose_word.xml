<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brokenpicinc.brokenpic.ChooseWordFragment"
    android:background="@drawable/broken_pic_logo_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/choose_your_first_word_logo"
            android:background="@drawable/broken_pic_logo_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="65"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:textSize="25dp"
                android:layout_gravity="center"
                android:hint="@string/type_your_word"
                android:text=""
                android:layout_weight="80"
                android:id="@+id/chosen_word_edittext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:orientation="horizontal"
                android:weightSum="100">
                <ImageButton
                    android:id="@+id/clear_word_btn"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:layout_gravity="left"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/clear_btn"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    />
                <ImageButton
                    android:id="@+id/send_word_btn"
                    android:layout_width="0dp"
                    android:background="@null"
                    android:layout_alignParentEnd="true"
                    android:layout_height="match_parent"
                    android:layout_weight="48"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/send_btn"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
