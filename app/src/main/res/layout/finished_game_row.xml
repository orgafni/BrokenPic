<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/chooseFinishedGameLayout"
        android:background="@drawable/participant_row"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:background="@drawable/participant_index_bg"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="match_parent"
            android:id="@+id/row_game_finished_time"
            android:gravity="center"
            android:textSize="14dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60"
            android:id="@+id/finished_game_row_participents"
            android:orientation="horizontal"
            android:weightSum="100">

        </LinearLayout>
        <TextView
            android:id="@+id/finishedGameStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:textColor="@color/colorWhite"
            android:gravity="center_horizontal"
            android:textSize="14dp">


        </TextView>


    </LinearLayout>

</LinearLayout>

