<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brokenpicinc.brokenpic.TakeTurnFragment"
    android:background="@drawable/broken_pic_logo_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/take_your_turn_logo"
            android:background="@drawable/broken_pic_logo_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <LinearLayout
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:orientation="horizontal"
                android:weightSum="100">
                <ImageButton
                    android:id="@+id/guess_it_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/guess_it_btn"
                    android:background="@null"
                    />
                <ImageButton
                    android:id="@+id/draw_it_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:src="@drawable/draw_it_btn"
                    android:layout_marginLeft="2dp"
                    android:background="@null"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
