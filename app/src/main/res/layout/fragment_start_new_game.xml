<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brokenpicinc.brokenpic.StartNewGameFragment"
    android:background="@drawable/broken_pic_logo_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/start_new_game_logo"
            android:background="@drawable/broken_pic_logo_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <ListView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:id="@+id/particpantsListListView"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="horizontal"
            android:weightSum="100">
            <ImageButton
                android:id="@+id/new_game_clean_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/clean_list_btn"
                />
            <ImageButton
                android:id="@+id/new_game_shuffle_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/shuffle_list_btn"
                />
            <ImageButton
                android:id="@+id/new_game_start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:src="@drawable/start_game_btn"
                />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
