<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brokenpicinc.brokenpic.SignupFragment"
    android:background="@drawable/broken_pic_logo_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:src="@drawable/sign_up_logo"
            android:background="@drawable/broken_pic_logo_bg"
            />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="90"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="100">

                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="100">

                    <EditText
                        style="@style/PaddingTopStyle"
                        android:id="@+id/register_nickname_edittext"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:text="@string/nickname"
                        android:background="@color/colorWhite"/>

                    <EditText
                        style="@style/PaddingTopStyle"
                        android:id="@+id/register_email_edittext"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:text="@string/email"
                        android:background="@color/colorWhite"/>
                    <EditText
                        style="@style/PaddingTopStyle"
                        android:id="@+id/register_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:text="@string/password"
                        android:background="@color/colorWhite"/>
                    <EditText
                        style="@style/PaddingTopStyle"
                        android:id="@+id/register_confirmPass_edittext"
                        android:layout_width="match_parent"
                        android:layout_weight="25"
                        android:layout_height="0dp"
                        android:text="@string/confirmPassword"
                        android:background="@color/colorWhite"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:weightSum="100">
                    <ImageButton
                        android:scaleType="fitCenter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/upload_photo_btn"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="100">
            <ImageButton
                android:id="@+id/register_continue_btn"
                android:layout_width="0dp"
                android:layout_weight="75"
                android:layout_height="wrap_content"
                android:src="@drawable/continue_btn"
                />
        </LinearLayout>
        
    </LinearLayout>

</FrameLayout>
